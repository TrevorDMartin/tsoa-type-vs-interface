        "email": "DL-GO-MYSCRV-DEVELOPERS@lowes.com"
    },
    "main": "build",
    "engines": {
        "node": ">=18.15.0",
        "npm": ">=9.5.0"
    },
    "scripts": {
        "build": "yarn clean && yarn generate && NODE_ENV=production yarn tsc --project tsconfig.prd.json",
        "clean": "rimraf ./build ./generated",
        "custom-autoclean": "cp .yarnclean-prd-only .yarnclean && yarn autoclean --force ; rm .yarnclean",
        "format": "yarn prettier --write . --ignore-path .gitignore",
        "generate": "tsoa -c tsoaConfig.json spec-and-routes",
        "lint": "yarn lint:ci --fix",
        "lint:ci": "tsc && yarn eslint --ignore-path .gitignore ./",
        "prepare": "husky install",
        "start": "NODE_EXTRA_CA_CERTS=\"$(pwd)/certs/MSCAROOT-LOWES.crt\" nodemon",
        "style": "yarn format && yarn lint",
        "test": "jest --config jest.config.ts",
        "test:ci": "yarn test --ci",
        "test:coverage": "rimraf ./coverage && yarn test:ci --coverage",
        "view:coverage": "open coverage/lcov-report/index.html"
    },
    "dependencies": {
        "body-parser": "^1.20.0",
        "boxen": "^5.1.2",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "detect-port": "^1.4.0",
        "express": "^4.18.1",
        "helmet": "^6.1.5",
        "pino": "^8.7.0",
        "pino-http": "^8.2.0",
        "pino-pretty": "^10.0.0",
        "prom-client": "^14.1.0",
        "tsconfig-paths": "^4.1.0",
        "swagger-ui-express": "^4.6.3",
        "tsoa": "^5.1.1"
    },
    "devDependencies": {
        "@tsconfig/node18": "^2.0.0",
        "@types/compression": "^1.7.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.12",
        "@types/detect-port": "^1.3.2",
        "@types/express": "^4.17.13",
        "@types/jest": "^29.5.1",
        "@types/node": "^18.15.0",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.34.0",
        "@typescript-eslint/parser": "^5.34.0",
        "eslint": "^8.22.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.26.0",
        "husky": "^8.0.1",
        "jest": "^29.5.0",
        "jest-mock-extended": "^3.0.4",
        "lint-staged": "^13.0.3",
        "msw": "^1.2.1",
        "nodemon": "^2.0.22",
        "prettier": "2.8.8",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    }
}
